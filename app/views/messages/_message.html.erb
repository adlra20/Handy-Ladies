<div class="message-container <%= message.sender == current_user ? 'sender' : 'receiver' %>" data-sender="<%= message.sender.id %>" data-receiver="<%= message.receiver.id %>" id="message-<%= message.id %>">
  <i class="author">
    <small><%= message.created_at.strftime("%b %e, %l:%M%p") %></small>
  </i>
  <div class="message">
    <div class="message-content"><%= message.content %></div>
    <%= cl_image_tag(message.sender.photo.key, width: 120, height: 200, crop: :fill, class: "card-avatar-bigger") %>
  </div>
</div>
