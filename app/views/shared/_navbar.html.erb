<div class="navbar d-flex justify-content-between">
  <%= link_to "HandyLadies", home_path, class: "home-button-navbar" %>
    <div class="dropdown">
      <%= link_to '<i class="far fa-user-circle"></i>'.html_safe, root_path, class: "avatar dropdown-toggle", id: "dropdownMenuButton", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <% if user_signed_in? %>
          <%= link_to "Home", root_path, class: "dropdown-item" %>
          <%= link_to "My Profile", worker_path(current_user.id), class: "dropdown-item" %>
          <%= link_to "Edit Profile",edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "My bookings", jobs_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        <% end %>
      </div>
    </div>
</div>

