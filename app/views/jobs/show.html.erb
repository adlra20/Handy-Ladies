  <div class="container d-flex flex-column justify-content-center text-center">
    <h1>Booking Confirmed!</h1>
    <div class="d-flex justify-content-center mb-2">
      <%= cl_image_tag(@job.handylady.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face, class: "card-avatar-bigger") %>
    </div>
    <h1><%= @job.handylady.name %></h1>
    <div class="d-flex justify-content-center mb-3">
      <% @job.handylady.star_rating.times do %>
        <i class="fas fa-star"></i>
      <% end %>
    </div>

    <h3><%= format_time(@job.date).strftime('%b %e, %l:%M %p') %></h3>


    <h3><%= @job.handylady.hourly_price %>â‚¬/h</h3>
    <div class="text-justify mt-3">
    <p><strong>Issue:</strong> <%= @job.title %></p>
    <p><strong>Description:</strong> <%= @job.description %></p>
    <h4><i class="fas fa-map-marker-alt"></i> &nbsp;<%= @job.location %></h4>
    </div>
    <h4 class="d-flex justify-content-center mt-5"><%= link_to "X CANCEL BOOKING", root_path, :id => 'cancel', "data-toggle" => "modal", 'data-target' => '#cancelModal' %></h4>
    <%= link_to "UPCOMING BOOKINGS", jobs_path, class: 'button button-primary' %>
</div>

<!-- Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="exampleModalLabel">Cancel booking</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <div class="sad-face"><i class="fas fa-frown"></i></div>
        <h3>Would you like to cancel this booking?</h3>
        <p>if you cancel it, we recommend you contact the handylady to let her know</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
        <%= link_to "Cancel this booking", job_path(@job), class: 'btn btn-primary', method: :delete %>
      </div>
    </div>
  </div>
</div>