<h1><%= @user.name %></h1>
<div class="chat">

  <div id="messages" data-current-user-id="<%= current_user.id %>" data-user-id="<%= @user.id %>">
    <% @messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>


  <div class="write-message">
    <%= simple_form_for [ @user, @message ], remote: true, authenticity_token: true do |f| %>
      <div class="message-input">
        <div class="text-input">
          <%= f.input :content, label: false, placeholder: "Message #{@user.name}" %>
        </div>
        <%= button_tag type: 'submit', class: "btn btn-primary send" do %>
          <i class="far fa-paper-plane" aria-hidden="true"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
